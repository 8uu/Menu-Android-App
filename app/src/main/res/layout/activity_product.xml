<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/item_details"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/category">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/back"
                android:backgroundTint="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/back"
                android:text="Back"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/roboto_medium"
                android:textSize="20sp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/favorite"
                android:background="@drawable/star2"
                android:backgroundTint="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/star"
                android:backgroundTint="@color/colorPrimary"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/gradiente_background"/>

    </RelativeLayout>



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/item_details">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="California Roll With Black"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/grey_700"
                android:textSize="24sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_details_name">

                <TextView
                    android:id="@+id/item_details_description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DESCRIPTION"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textColor="@color/grey_80"
                    android:textSize="14sp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp" />

                <TextView
                    android:id="@+id/item_details_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_details_description_text"
                    android:text="It is often frustating to attempt to plan meals that are designed for one, Despite this fact, we are seeing more and more recipe books and Internet"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/grey_40"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>